pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout([$class: 'GitSCM',
                              branches: [[name: '*/master']],
                              userRemoteConfigs: [[url: 'https://github.com/TaskVerse/TaskVerse-Boilerplate.git']]])
                }
            }
        }

        // Agrega otras etapas seg√∫n sea necesario
    }
}